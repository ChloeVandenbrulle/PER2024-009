<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import atlantafx.base.controls.*?>
<?import javafx.scene.web.WebView?>


<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.test_librairies.HelloController">
    <ToolBar styleClass="toolbar">
        <items>
            <Button text="Nouveau" />
            <Button text="Ouvrir" />
            <Separator orientation="HORIZONTAL" />
            <Button text="Enregistrer" />
            <Region HBox.hgrow="ALWAYS" /> <!-- Espace flexible -->
            <Button text="Aide" />
        </items>
    </ToolBar>
    <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <MenuButton mnemonicParsing="false" text="MenuButton">
     <items>
       <MenuItem mnemonicParsing="false" text="Action 1" />
       <MenuItem mnemonicParsing="false" text="Action 2" />
     </items>
   </MenuButton>

  <Label fx:id="welcomeText" />
  <Button fx:id="helloButton" onAction="#onHelloButtonClick" text="Hello!" />
   <TextArea prefHeight="200.0" prefWidth="200.0" />

    <WebView fx:id="codeEditor" VBox.vgrow="ALWAYS" prefHeight="400"/>
</VBox>
