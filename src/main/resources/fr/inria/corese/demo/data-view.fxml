<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.inria.corese.demo.controller.DataViewController"
            stylesheets="@../../../../styles/buttons.css">

    <top>
        <HBox fx:id="topButtonBox" spacing="10" styleClass="button-container">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <center>
        <HBox spacing="0">
            <VBox spacing="5" styleClass="section-container" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <VBox fx:id="fileListContainer" VBox.vgrow="ALWAYS" styleClass="file-container"/>
                <VBox styleClass="stats-container">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <Label fx:id="semanticElementsLabel" text="Number of semantic elements loaded: 0"/>
                    <Label fx:id="tripletLabel" text="Number of triplet: 0"/>
                    <Label fx:id="graphLabel" text="Number of graph: 0"/>
                    <Label fx:id="rulesLoadedLabel" text="Number of rules loaded: 0"/>
                </VBox>
            </VBox>

            <VBox spacing="10" styleClass="section-container, rules-container">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <CheckBox fx:id="traceCheckbox" text="Trace"/>
                <CheckBox fx:id="loadNamedCheckbox" text="Load Named"/>
                <TitledPane text="RDFS" expanded="true">
                    <VBox spacing="5">
                        <CheckBox fx:id="rdfsSubsetCheckbox" text="RDFS Subset"/>
                        <CheckBox fx:id="rdfsRLCheckbox" text="RDFS RL"/>
                    </VBox>
                </TitledPane>
                <TitledPane text="OWL" expanded="true">
                    <VBox spacing="5">
                        <CheckBox fx:id="owlRLCheckbox" text="OWL RL"/>
                        <CheckBox fx:id="owlRLExtendedCheckbox" text="OWL RL Extended"/>
                        <CheckBox fx:id="owlRLTestCheckbox" text="OWL RL Test"/>
                        <CheckBox fx:id="owlCleanCheckbox" text="OWL Clean"/>
                    </VBox>
                </TitledPane>
                <CheckBox fx:id="graphIndexCheckbox" text="Graph index"/>
                <Separator/>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <CheckBox fx:id="myRuleFileCheckbox" text="My rule file"/>
                </HBox>
                <HBox fx:id="configActionBox" spacing="10" alignment="BOTTOM_RIGHT"/>
            </VBox>
        </HBox>
    </center>

</BorderPane>