<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import fr.inria.corese.demo.view.CodeMirrorView?>

<?import fr.inria.corese.demo.view.NavigationBarView?>
<?import fr.inria.corese.demo.view.IconButtonBarView?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.inria.corese.demo.controller.ValidationViewController"
            prefHeight="600.0" prefWidth="800.0" styleClass="main-container">

    <left>
        <VBox spacing="10" styleClass="sidebar">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <VBox fx:id="navigationContainer"/>
        </VBox>
    </left>

    <center>
        <BorderPane>
            <top>
                <ToolBar>
                    <items>
                        <Button fx:id="newFileButton" text="New File"/>
                        <Button fx:id="openFileButton" text="Open File"/>
                        <Button fx:id="saveButton" text="Save"/>
                    </items>
                </ToolBar>
            </top>

            <center>
                <HBox>
                    <SplitPane dividerPositions="0.2" HBox.hgrow="ALWAYS">
                        <items>
                            <!-- L'arborescence des fichiers -->
                            <TreeView fx:id="fileTreeView" minWidth="120"/>

                            <!-- Le conteneur de l'Ã©diteur -->
                            <CodeMirrorView fx:id="editorContainer"/>
                        </items>
                    </SplitPane>
                    <VBox fx:id="iconButtonContainer" minWidth="45"/>
                </HBox>
            </center>
        </BorderPane>
    </center>

</BorderPane>