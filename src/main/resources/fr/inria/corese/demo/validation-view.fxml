<?import javafx.scene.layout.*?>

<?import fr.inria.corese.demo.view.TopBar?>
<BorderPane fx:id="mainContainer"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.inria.corese.demo.controller.ValidationViewController"
            stylesheets="@../../../../styles/application.css">

    <top>
        <TopBar fx:id="topBar"/>
    </top>
    <center>
        <BorderPane fx:id="contentContainer">
            <center>

                <SplitPane fx:id="splitPane" dividerPositions="0.7" orientation="VERTICAL">
                    <StackPane fx:id="editorContainer" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"/>
                    <StackPane fx:id="consoleContainer" HBox.hgrow="ALWAYS"/>
                </SplitPane>
            </center>
        </BorderPane>
    </center>

