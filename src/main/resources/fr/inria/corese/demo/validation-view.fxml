<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import fr.inria.corese.demo.view.CodeMirrorView?>
<?import fr.inria.corese.demo.view.IconButtonBarView?>

<BorderPane fx:id="mainContainer" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.inria.corese.demo.controller.ValidationViewController">

    <center>
        <BorderPane fx:id="contentContainer">
            <top>
                <ToolBar>
                    <items>
                        <Button fx:id="newFileButton" text="New File"/>
                        <Button fx:id="openFileButton" text="Open File"/>
                        <Button fx:id="saveButton" text="Save"/>
                    </items>
                </ToolBar>
            </top>

            <center>
                <SplitPane dividerPositions="0.2">
                    <items>
                        <TreeView fx:id="fileTreeView" minWidth="120"/>
                        <CodeMirrorView fx:id="editorContainer"/>
                    </items>
                </SplitPane>
            </center>

            <right>
                <VBox fx:id="iconButtonContainer" maxWidth="50" minWidth="50"/>
            </right>
        </BorderPane>
    </center>

</BorderPane>