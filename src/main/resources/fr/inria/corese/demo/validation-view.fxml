<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import fr.inria.corese.demo.view.CodeMirrorView?>

<BorderPane fx:id="mainContainer"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.inria.corese.demo.controller.ValidationViewController"
            stylesheets="@../../../../styles/application.css">

    <center>
        <BorderPane fx:id="contentContainer">
            <top>
                <ToolBar styleClass="tool-bar">
                    <items>
                        <Button fx:id="newFileButton" styleClass="rounded-button" text="New File"/>
                        <Button fx:id="openFileButton" styleClass="rounded-button" text="Open File"/>
                        <Button fx:id="saveButton" styleClass="rounded-button" text="Save"/>
                    </items>
                </ToolBar>
            </top>

            <center>
                <SplitPane dividerPositions="0.2">
                    <TreeView fx:id="fileTreeView" styleClass="tree-view" minWidth="120"/>
                    <CodeMirrorView fx:id="editorContainer"/>
                </SplitPane>
            </center>

            <right>
                <VBox fx:id="iconButtonContainer" styleClass="sidebar" maxWidth="50" minWidth="50"/>
            </right>
        </BorderPane>
    </center>

</BorderPane>