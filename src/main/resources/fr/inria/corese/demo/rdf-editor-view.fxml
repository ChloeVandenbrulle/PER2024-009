<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import fr.inria.corese.demo.view.CodeMirrorView?>

<?import fr.inria.corese.demo.view.FileExplorerView?>
<BorderPane fx:id="mainContainer"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.inria.corese.demo.controller.RDFEditorViewController"
            stylesheets="@../../../../styles/application.css">

    <center>
        <BorderPane fx:id="contentContainer">

            <center>
                <SplitPane dividerPositions="0.2">
                    <FileExplorerView fx:id="fileTreeView" styleClass="tree-view" minWidth="120"/>
                    <CodeMirrorView fx:id="editorContainer"/>
                </SplitPane>
            </center>

            <right>
                <VBox fx:id="iconButtonContainer" styleClass="sidebar" maxWidth="50" minWidth="50"/>
            </right>
        </BorderPane>
    </center>

</BorderPane>